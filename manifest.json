{
  "name": "GitHub Agile Extension",
  "version": "1.0.2",
  "manifest_version": 2,
  "description": "Adds estimations to your Github projects planning.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {},
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/projects/*",
        "https://github.com/*/*/issues",
        "https://github.com/*/*/issues?*"
      ],
      "js": [
        "main.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ],
  "permissions": [
    "tabs"
  ]
}
